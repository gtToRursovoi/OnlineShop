<UserControl x:Class="AplicationApp.View.Pagess.User.ProductPageUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F7F2FA" Offset="0"/>
            <GradientStop Color="#E3D9F9" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Grid.Background>
            <!-- Немного более насыщенный светло-фиолетовый фон для содержимого -->
            <SolidColorBrush Color="#E6D9F8"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Список товаров"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#5D3FD3"
                   Margin="20,10"
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding Products}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                CornerRadius="15"
                                Padding="15"
                                Margin="0,10"
                                Effect="{DynamicResource DropShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Width="150" Height="150" CornerRadius="10" ClipToBounds="True">
                                    <Image Source="{Binding ImageUrl}"
           Stretch="UniformToFill"/>
                                </Border>

                                <!-- Информация -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="20"
                                               Foreground="#4B0082"/>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Foreground="#555"
                                               Margin="0,6,0,6"
                                               MaxWidth="480"/>
                                    <TextBlock Text="{Binding Price, StringFormat=Цена: {0:C}}"
                                               FontSize="16"
                                               Foreground="#228B22"
                                               FontWeight="SemiBold"/>
                                    <Button Content="Добавить в корзину"
                                            Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Margin="0,12,0,0"
                                            Padding="6,4"
                                            FontSize="14"
                                            Width="160"
                                            Background="#A678F4"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Grid.Row="2">
            <Button Content="Обновить"
                    Width="100"
                    Height="30"
                    Background="#A678F4"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
