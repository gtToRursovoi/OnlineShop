<UserControl x:Class="AplicationApp.View.Pagess.User.OrdersPageUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <TextBlock Text="Мои заказы" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ListView ItemsSource="{Binding Orders}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding OrderDate, StringFormat=Дата заказа: {0:dd.MM.yyyy HH:mm}}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Status, StringFormat=Статус: {0}}" />
                            <TextBlock Text="{Binding TotalAmount, StringFormat=Сумма: {0:C}}" FontWeight="Bold" Margin="0,0,0,10"/>

                            <TextBlock Text="Товары в заказе:" FontWeight="Bold" Margin="0,5,0,3"/>

                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0,0,0,1" BorderBrush="LightGray" Padding="5">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Product.Name}" FontWeight="SemiBold" Width="200"/>
                                                <TextBlock Text="{Binding Quantity, StringFormat=Кол-во: {0}}" Width="100"/>
                                                <TextBlock Text="{Binding PricePerUnit, StringFormat=Цена за ед.: {0:C}}" Width="150"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
