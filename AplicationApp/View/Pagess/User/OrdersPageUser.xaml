<UserControl x:Class="AplicationApp.View.Pagess.User.OrdersPageUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Мои заказы" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        </StackPanel>
       

        <ListView ItemsSource="{Binding Orders}" Margin="10" Background="White" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="#CCCCCC" CornerRadius="10" Padding="20" Margin="10" Background="#FAFAFA" >
                        <StackPanel>
                            <!-- Основная информация о заказе -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                <TextBlock Text="{Binding OrderDate, StringFormat=Дата заказа: {0:dd.MM.yyyy HH:mm}}"
                            FontWeight="Bold"
                            FontSize="16"
                            Foreground="#333"
                            Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding Status, StringFormat=Статус: {0}}"
                            FontSize="16"
                            Foreground="#666"
                            Margin="0,0,20,0"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat=Сумма: {0:C}}"
                            FontWeight="Bold"
                            FontSize="16"
                            Foreground="#007A00"/>
                            </StackPanel>

                            <!-- Заголовок товаров -->
                            <TextBlock Text="Товары в заказе:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                            <!-- Список товаров -->
                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8" Padding="10" Margin="0,5,0,5" Background="#FFFFFF">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Название товара -->
                                                <TextBlock Text="{Binding Product.Name}"
                                            FontWeight="SemiBold"
                                            FontSize="14"
                                            Foreground="#333"
                                            Width="250"/>

                                                <!-- Количество -->
                                                <TextBlock Text="{Binding Quantity, StringFormat=Кол-во: {0}}"
                                            FontSize="14"
                                            Width="120"
                                            Foreground="#555"/>

                                                <!-- Цена -->
                                                <TextBlock Text="{Binding PricePerUnit, StringFormat=Цена за ед.: {0:C}}"
                                            FontSize="14"
                                            Width="180"
                                            Foreground="#555"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
