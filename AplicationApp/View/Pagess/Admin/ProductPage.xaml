<UserControl x:Class="AplicationApp.View.Pagess.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel>
                <Label  Content="СОСУ ХУЙ ЗА ПРОДУКТЫ" HorizontalAlignment="Center" Margin="10"/>
                <Button Width="140" Margin="3" Background="Gray" Foreground="Black" Content="Добавить" Click="AddProductButton_Click"/>
                <Button Width="140" Margin="3" Background="Gray" Foreground="Black" Content="Изменить" Click="EditProductButton_Click"/>
                <Button Width="140" Margin="3" Background="Gray" Foreground="Black" Content="Удалить"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <ListBox ItemsSource="{Binding FilteredProducts}"
         SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
         Margin="10"
         Height="400"
         Width="600">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="{Binding ImageUrl}" Width="100" Height="100" Stretch="UniformToFill" />
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" />
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxWidth="400" />
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" />
                                    <TextBlock Text="{Binding Stock, StringFormat='В наличии: {0} шт.'}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
