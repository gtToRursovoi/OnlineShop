<UserControl x:Class="AplicationApp.View.Pagess.Admin.AdminOrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Все заказы" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListView ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedOrder, Mode=TwoWay}" ScrollViewer.VerticalScrollBarVisibility="Visible" Width="770">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                            <StackPanel>
                                <TextBlock Text="{Binding OrderDate, StringFormat=Дата: {0:dd.MM.yyyy HH:mm}}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding User.Email, StringFormat=Пользователь: {0}}" />
                                <TextBlock Text="{Binding TotalAmount, StringFormat=Сумма: {0:C}}" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Status, StringFormat=Статус: {0}}" FontWeight="Bold"/>

                                <TextBlock Text="Состав заказа:" FontWeight="Bold" Margin="10,5,0,2"/>
                                <ItemsControl ItemsSource="{Binding OrderItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <TextBlock Text="{Binding Product.Name}" Width="200"/>
                                                <TextBlock Text="{Binding Quantity, StringFormat=Кол-во: {0}}" Width="100"/>
                                                <TextBlock Text="{Binding PricePerUnit, StringFormat=Цена: {0:C}}" Width="100"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center" >
                <Button Content="Подтвердить"
                        Command="{Binding ConfirmOrderCommand}"
                        Width="120"
                        Margin="10,0"
                       />
                <Button Content="Отменить"
                        Command="{Binding CancelOrderCommand}"
                        Width="120"
                        Margin="10,0"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
