<UserControl x:Class="AplicationApp.View.Pagess.Admin.AdminOrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Все заказы"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Список заказов -->
        <ListView ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                  Grid.Row="1"
                  Background="Transparent"
                  BorderThickness="0"
                  Margin="0,0,0,10">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,0,15" Background="White">
                        <StackPanel>
                            <!-- Заголовок заказа -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                                <TextBlock Text="{Binding OrderDate, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Status, StringFormat='  |  Статус: {0}'}" Foreground="#888" FontSize="14" Margin="20,0,0,0"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat='  |  Сумма: {0:C}'}" FontSize="14" Margin="20,0,0,0"/>
                            </StackPanel>

                            <!-- Список товаров в заказе -->
                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="8,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Source="{Binding Product.ImageUrl}" Width="70" Height="70" Margin="0,0,10,0" Grid.Column="0"/>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Product.Name}" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Product.Description}" FontSize="12" Foreground="#666" TextWrapping="Wrap" MaxWidth="350"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding Quantity, StringFormat='x{0}'}" FontSize="14" HorizontalAlignment="Right"/>
                                                    <TextBlock Text="{Binding PricePerUnit, StringFormat='Цена: {0:C}'}" FontSize="14" HorizontalAlignment="Right"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Подтвердить"
                    Command="{Binding ConfirmOrderCommand}"
           
                    Width="140"
                    Height="40"
                    Margin="10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"/>

            <Button Content="Отменить"
                    Command="{Binding CancelOrderCommand}"
                 
                    Width="140"
                    Height="40"
                    Margin="10,0"
                    Background="#E57373"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
