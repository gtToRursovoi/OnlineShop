<UserControl x:Class="AplicationApp.View.Pagess.Admin.AdminUsersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Пользователи" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListView ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="250"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Username}" Width="150"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding Role}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Удалить пользователя" 
                    Command="{Binding DeleteUserCommand}" 
                    Margin="0,10,0,0" Width="150" 
                    HorizontalAlignment="Left"
                    />
        </StackPanel>
    </Grid>
</UserControl>
