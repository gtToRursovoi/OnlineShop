<Window x:Class="AplicationApp.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicationApp.View.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="480" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Pink"
        >
    <Grid >
        <StackPanel Margin="20">
            <TextBlock Text="Авторизация" FontSize="20" Margin="0,0,0,30" HorizontalAlignment="Center" />
            <TextBlock Text="Username"/>
            <TextBox  Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,18"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5" PasswordChanged="PasswordBox_PasswordChanged"/>

            <Button Content="Войти" Command="{Binding LoginCommand}" Margin="0,10" Background="Violet"/>
            <Button Content="Регистрация" Margin="0,10" Click="OpenRegWindow" Background="Violet"/>
            
        </StackPanel>
    </Grid>
</Window>
