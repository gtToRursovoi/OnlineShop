<Window x:Class="AplicationApp.View.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicationApp.View.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="480" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Pink">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Регистрация" FontSize="20" Margin="0,0,0,10" />
            <TextBlock Text="UserName"/>
            <TextBox  Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Height="45"/>
            <TextBlock Text="Email"/>
            <TextBox  Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" Height="45"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5" PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock Text="Подтвердить пароль"/>
            <PasswordBox x:Name="ConfirmBox" Margin="0,5" PasswordChanged="ConfirmBox_PasswordChanged"/>

            <Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}" Margin="0,10" Background="Violet"/>
            <Button Content="Войти" Click="Button_Click"  Background="Violet" Margin="0,10"/>
           
        </StackPanel>
    </Grid>
</Window>
