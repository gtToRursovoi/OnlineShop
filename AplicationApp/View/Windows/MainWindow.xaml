<Window x:Class="AplicationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="730">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="Продукты" Width="140" Margin="3" Background="Beige" Foreground="Black" Click="OpenProductClick"></Button>
                <Button Content="Юзеры" Width="140" Margin="3" Background="Beige" Foreground="Black"></Button>
                <Button Content="Товары в корзине" Width="140" Margin="3" Background="Beige" Foreground="Black"></Button>
                <Button Content="Заказы" Width="140" Margin="3" Background="Beige" Foreground="Black"></Button>
                <Button Content="Элемент заказа" Width="140" Margin="3" Background="Beige" Foreground="Black"></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="MainFrame"/>
        </Grid>
    </Grid>
</Window>
